# Environment Variables Template
# 
# Copy this file to .env and fill in the actual values
# DO NOT commit .env to version control
# DO NOT expose these values in public repositories

# ========================================
# AZURE COSMOS DB Configuration
# ========================================

# Azure Cosmos DB Endpoint (https://xxxx.documents.azure.com:443/)
COSMOS_ENDPOINT=https://your-cosmosdb-account.documents.azure.com:443/

# Azure Cosmos DB Primary Key
COSMOS_KEY=your-cosmos-db-primary-key

# Azure Cosmos DB Database Name
COSMOS_DB_NAME=FileManagementDB

# Azure Cosmos DB Container Name
COSMOS_CONTAINER_NAME=files

# ========================================
# AZURE STORAGE (BLOB) Configuration
# ========================================

# Azure Storage Connection String
# Format: DefaultEndpointsProtocol=https;AccountName=xxxx;AccountKey=xxxx;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-account-key;EndpointSuffix=core.windows.net

# Azure Blob Storage Container Name
CONTAINER_NAME=file-uploads

# ========================================
# SERVER Configuration
# ========================================

# Node Environment
NODE_ENV=development

# Server Port
PORT=5000

# Max File Size (in bytes)
# Default: 104857600 (100 MB)
MAX_FILE_SIZE=104857600

# ========================================
# CORS Configuration
# ========================================

# CORS Allowed Origins (comma-separated for multiple)
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:80

# ========================================
# LOGGING Configuration
# ========================================

# Log Level: error, warn, info, debug
LOG_LEVEL=info
